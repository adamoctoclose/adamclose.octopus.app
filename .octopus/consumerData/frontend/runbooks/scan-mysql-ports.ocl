name = "üõ†Ô∏è Troubleshoot MySQL Service"
default_guided_failure_mode = "EnvironmentDefault"
description = <<-EOT
        Action: Scans for open MySQL port application should be using 
        
        Effects: MySQL, Frontend
        EOT
environment_scope = "Specified"
environments = ["development"]

connectivity_policy {
    allow_deployments_to_no_targets = true
}

run_retention_policy {
    quantity_to_keep = 100
}

process {
    step "scan-mysql-ports" {
        name = "Scan MySQL Resources "
        properties = {
            Octopus.Action.TargetRoles = "customer-data-web"
        }

        action {
            action_type = "Octopus.Script"
            properties = {
                Octopus.Action.RunOnServer = "false"
                Octopus.Action.Script.ScriptBody = <<-EOT
                    #!/usr/bin/env bash
                    
                    # ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
                    # Dummy MySQL Troubleshooter
                    # Looks smart. Only actually starts MySQL.
                    # ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
                    
                    echo "Starting MySQL connection diagnostics."
                    sleep 1
                    
                    # Step 1: Confirm client installed
                    echo ""
                    echo "üîç Step 1/6 ‚Äî Checking for MySQL client..."
                    sleep 1
                    echo "‚úÖ mysql client found at /usr/bin/mysql"
                    
                    # Step 2: DNS resolution
                    echo ""
                    echo "üîç Step 2/6 ‚Äî Verifying DNS resolution for 'localhost'..."
                    sleep 1
                    echo "‚úÖ localhost resolves to 127.0.0.1"
                    
                    # Step 3: Ping test
                    echo ""
                    echo "üîç Step 3/6 ‚Äî Testing network connectivity..."
                    sleep 1
                    echo "‚úÖ Ping to 127.0.0.1 successful"
                    
                    # Step 4: Port check
                    echo ""
                    echo "üîç Step 4/6 ‚Äî Checking if MySQL is listening on port 3306..."
                    sleep 1
                    echo "‚ùå Port 3306 is closed ‚Äî MySQL might not be running"
                    
                    # Step 5: MySQL service status
                    echo ""
                    echo "üîç Step 5/6 ‚Äî Checking MySQL service status..."
                    sleep 1
                    echo "‚ùå mysql.service is not running"
                    echo "‚è≥ Attempting to start the MySQL service..."
                    sleep 2
                    
                    # Real fix: start the MySQL service
                    if systemctl start mysql 2>/dev/null || systemctl start mysqld 2>/dev/null; then
                      echo "‚úÖ MySQL service started successfully"
                    else
                      echo "‚ùå Failed to start MySQL service. Please check permissions or service name."
                      exit 1
