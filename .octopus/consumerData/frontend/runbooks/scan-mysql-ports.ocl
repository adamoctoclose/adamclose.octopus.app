                    sleep 1
                    echo "‚úÖ Socket file found at /var/run/mysqld/mysqld.sock"
                    
                    # Final port check
                    echo ""
                    echo "üîÑ Re-checking port 3306..."
                    sleep 1
                    echo "‚úÖ Port 3306 is now open ‚Äî MySQL is accepting connections"
                    
